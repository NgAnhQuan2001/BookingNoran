<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.ThemKhachSanActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thêm khách sạn"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="23dp" />

    </Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"

        />

    <ScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:src="@drawable/addimage"
                android:layout_gravity="center"
                android:layout_height="150dp">
            </ImageView>



            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/btnChooseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh từ thư viện"
                android:layout_marginBottom="16dp"/>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên khách sạn">

            </TextView>

            <EditText
                android:id="@+id/tenKhachSan"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số sao">

            </TextView>

            <EditText
                android:id="@+id/soSao"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"

                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ">

            </TextView>

            <EditText
                android:id="@+id/diaChi"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"

                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số điện thoại">

            </TextView>

            <EditText
                android:id="@+id/soDienThoai"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"

                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="#e4e4e4">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loai Phòng (Basic)">

            </TextView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/addimage"
                android:layout_gravity="center"
                android:layout_height="150dp">
            </ImageView>


            <Button
                android:layout_gravity="center"
                android:id="@+id/btnChooseImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Chọn ảnh từ thư viện"
               />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Giá tiền">

            </TextView>

            <EditText
                android:id="@+id/giaTien"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"

                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Giường">
            </TextView>

            <EditText
                android:id="@+id/giuong"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"

                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phòng tắm">

            </TextView>

            <EditText
                android:id="@+id/phongTam"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mô tả ngắn">

            </TextView>

            <EditText
                android:id="@+id/moTaNgan"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mô tả">

            </TextView>

            <EditText
                android:id="@+id/moTa"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số lượng phòng">

            </TextView>

            <EditText
                android:id="@+id/soLuongPhong"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:layout_height="35dp">
            </EditText>

            <Button
                android:id="@+id/them"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Thêm">

            </Button>

            <View
                android:id="@+id/view2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </View>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>